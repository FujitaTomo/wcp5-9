	<%= render "users/list", user: @user, book: @book %>
	<div class="col-lg-9">
	<h1>Users</h1>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Image</th> 
				<th>Name</th>
				<th>Link</th>
			</tr>
		</thead>

		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td><%=  attachment_image_tag user, :user_image, :fill, 100, 100, format: 'jpeg', class: "pull-left profile-img", fallback:"noimage.jpeg",size: '40x40' %></td>
				<td><%= user.name %></td>
				<td><%= link_to "show",user_path(user) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	</div>