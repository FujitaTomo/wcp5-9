<div class="row">
			<div class="col-lg-3">
	<h2>User info</h2>

		 <%= attachment_image_tag user, :user_image, :fill, 100, 100, format: 'jpeg', class: "pull-left profile-img", fallback:"noimage.jpeg",size: '100x100' %>

	<table class="table table-hover" style="table-layout:fixed;width:100%;">
		<tr>
			<th>name</th>
			<th><%= user.name %></th>
		</tr>
		<tr>
			<th>introduction</th>
			<th style="word-wrap:break-word;"><%= user.introduction %></th>
		</tr>
	</table>

	<% if user.id == current_user.id %>
        <%= link_to "ProfileEdit", edit_user_path(user), class: "btn btn-success col-lg-12" %>
    <% else %>
    	<%= link_to "profileEdit", user_path(current_user.id), class: "btn btn-success col-lg-12" %>
    <% end %>
    <br><br>

    <h2>New book</h2>
		<%= form_for(book) do |book| %>
			<h4> Title</h4>
			<%= book.text_field :title , class: 'col-lg-12' %>
			<br>

			<h4> Opinion</h4>
			<%= book.text_area :body, class: 'col-lg-12' %>
			<br>
			<br><br>

			<%= book.submit "Create book", class: 'btn btn-primary col-lg-12' %>
		<% end %>
    		</div>