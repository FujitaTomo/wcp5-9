<%= render "books/list", user: @user, book: @book %>
<div class="col-lg-9">
<h2>Books</h2>

	<table class="table table-hover">
		<thead>
			<tr>
				<th>Image</th> 
				<th>Title</th>
				<th>Opinion</th>
			</tr>
		</thead>

		<tbody>
			<% @books.each do |book| %>
			<tr>
				<td><%= attachment_image_tag book.user, :user_image, :fill, 100, 100, format: 'jpeg', class: "pull-left profile-img", fallback:"noimage.jpeg",size: '40x40' %></td>
				<td><%= link_to book.title,book_path(book) %></td>
				<td><%= book.body %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>